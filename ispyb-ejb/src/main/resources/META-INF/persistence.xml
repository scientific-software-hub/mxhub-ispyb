<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
			 xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="ispyb_config" transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ispyb_build"/>
			<property name="javax.persistence.jdbc.user" value="pxuser"/>
			<property name="javax.persistence.jdbc.password" value="pxuser"/>
			<property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, Tool=INFO, SQL=TRACE"/>
		</properties>
	</persistence-unit>

	<persistence-unit name="ispyb_db" transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ispyb_build"/>
			<property name="javax.persistence.jdbc.user" value="pxuser"/>
			<property name="javax.persistence.jdbc.password" value="pxuser"/>
			<property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, Tool=INFO, SQL=TRACE"/>
		</properties>
	</persistence-unit>

</persistence>